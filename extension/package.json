{
  "name": "copy-breadcrumbs",
  "displayName": "Copy Breadcrumbs",
  "publisher": "scott-blair",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:copy-breadcrumbs.copy"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "copy-breadcrumbs.copy",
      "title": "Copy Breadcrumbs"
    }],
    "configuration": {
      "title": "Copy Breadcrumbs",
      "properties": {
        "copy-breadcrumbs.pasteToTerminal": {
          "type": "boolean",
          "default": true,
          "description": "Automatically paste the breadcrumb path into the active terminal."
        },
        "copy-breadcrumbs.copyToClipboard": {
          "type": "boolean",
          "default": true,
          "description": "Copy the breadcrumb path to the clipboard."
        },
        "copy-breadcrumbs.showAlert": {
          "type": "boolean",
          "default": true,
          "description": "Show a notification message with the clipboard contents."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.69.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
